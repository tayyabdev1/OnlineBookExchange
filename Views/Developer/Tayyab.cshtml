            }, "-=1"); // Overlap slightly
        });


        function openModal() {
            let imgSrc = document.getElementById("portfolio-img").src;
            document.getElementById("modal-img").src = imgSrc;

            let modal = new bootstrap.Modal(document.getElementById("portfolioModal"));
            modal.show();
        }


        document.addEventListener("DOMContentLoaded", function () {
            let modal = document.getElementById("portfolioModal");

            modal.addEventListener("show.bs.modal", function () {
                setTimeout(() => {
                    modal.classList.add("show");
                }, 50); // Small delay to allow modal transition to apply
            });

            modal.addEventListener("hidden.bs.modal", function () {
                modal.classList.remove("show");
            });
        });


    </script>

